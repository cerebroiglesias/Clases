
<div class="container m-5 text-bg-success text-center">
    
    {{#if  product}}
        <h1 class="m-5">Actualizacion de Productos</h1>
    {{^}}
        <h1 class="m-5">Registro de Nuevos Usuarios</h1>
    {{/if}}
</div>

<div class="container text-center m-5">
    {{#if  product}}
        <form action="/productos/actualizar/{{product.id}}" method="post">
    {{^}}
        <form action="/productos" method="post">
    {{/if}}
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" value="{{product.nombreProducto}}">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Precio</label>
            <input type="number" class="form-control" id="precio" name="precio" value="{{product.precioProducto}}">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Imagen</label>
            <input type="text" class="form-control" id="imagen" name="imagen" value="{{product.imagenProducto}}">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Stock</label>
            <input type="number" class="form-control" id="stock" name="stock" value="{{product.stockProducto}}">
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Enviar datos</button>
        </div>
        <div class="mb-3">
            <button type="reset" class="btn btn-danger">Borrar datos</button>
        </div>
    </form>
</div>